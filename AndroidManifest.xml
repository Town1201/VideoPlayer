<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.videoplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/lunch"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WatchHistory"
            android:label="@string/title_activity_watch_history" >
        </activity>
        
        <activity
            android:name=".PlayVideoActivity"
            android:label="@string/title_activity_play_video" >
        </activity>
        
        <activity
            android:name=".DBHelperActivity"
            android:label="@string/title_activity_dbhelper" >
        </activity>
        
        <activity 
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"
            ></activity>
    </application>

</manifest>
